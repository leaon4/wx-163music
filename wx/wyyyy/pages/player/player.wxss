.bgimage{
	width:100%;
	height:100vh;
	position: fixed;
	z-index: -1;
}
.aaa{
	width:50px;
	height:20px;
	border: 1px solid #fff;
	position: absolute;
	top:50px;
	left:10px;
}
.page{
	background-color: rgba(0,0,0,0.6);
	color:white;
	/*width:100%;*/
	/*height:100vh;*/
	/*position: fixed;*/
	color:#e9e9e9;
}
.logo{
	width:90px;
	height:40px;
	margin-left:10px;
}
.disc-container{
	position: relative;
	width:300px;
	height:300px;
	margin:auto;
	margin-top:12px;
}
.disc{
	margin:auto;
	margin-top:3px;
	width:290px;
	height:290px;
	/*position: relative;*/
	display: flex;
	justify-content: center;
	align-items: center;
	animation: move 25s linear infinite;
}
@keyframes move{
	100%{
		transform:rotate(360deg);
	}
}
.disc_1{
	border-radius: 50%;
	width:190px;
}
.disc_2{
	/*border: 1px solid yellow;*/
	width:290px;
	height:290px;
	position: absolute;
}
.pause-icon{
	margin-top:-5px;
	width:60px;
	height:60px;
	position: absolute;
	z-index: 3;
	left:50%;
	top:50%;
	transform:translate(-50%, -50%);
	border-radius: 50%;
	border: 1px solid #fff;
}
.pause-icon:before{
	content:'';
	box-sizing: border-box;
	position: absolute;
	left:50%;
	top:50%;
	transform:translate(-50%,-50%);
	border-left: 18px solid white;
	border-top: 12px solid transparent;
	border-bottom: 12px solid transparent;
}
.paruse-btn-area{
	width:290px;
	height:290px;
	/*border: 1px solid #fff;*/
	border-radius: 50%;
	position: absolute;
	top:0;
	left:3px;
	z-index: 4;
}
.needle{
	width:90px;
	position: absolute;
	z-index: 2;
	top:-56px;
	left:48%;
}
.lyrics-box{
	margin-top:50px;
	/*border: 1px solid #fff;*/
