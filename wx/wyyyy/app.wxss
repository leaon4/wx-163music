/**app.wxss**/
.section-title{
	height:48px;
	line-height: 48px;
	font-size:17px;
}
.section-title:before{
	content: '';
	display: inline-block;
	margin-right:8px;
	width:2px;
	height:16px;
	background-color: #d43c33;
	transform:translateY(2px);
}
.intro-content{
	height: 340px;
	display: flex;
	flex-wrap: wrap;
}
.intro-content-player{
	display: flex;
}
.intro-item{
	flex:1;
	position: relative;
	max-width:34vw;
}
.intro-image{
	width:97.5%;
	height:118px;
	display: block;
}
.intro-text{
	display: block;
	box-sizing: border-box;
	width:120px;
	height:36px;
	overflow : hidden;
	font-size:13px;
	padding:0 5px;
}
.intro-text-player{
	display: block;
	box-sizing: border-box;
	width:120px;
	overflow : hidden;
	font-size:13px;
	padding:0 5px;
	text-overflow: ellipsis;
	white-space: nowrap;
	/*border: 1px solid #000;*/
}
.intro-artist-player{
	font-size:12px;
	color:#999292;
	/*border: 1px solid #000;*/
	display: block;
	padding:0 5px;
	overflow : hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.listen-time{
	font-size:12px;
	position: absolute;
	top:0;
	left:0;
	color:white;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	width:100%;
	height:20px;
	box-sizing: border-box;
	padding-right:10px;
	background:linear-gradient(to bottom,rgba(0,0,0,0.4),transparent);
}
.earicon{
	width:12px;
	height:12px;
	margin-right:3px;
}

.songs-item{
	height:43px;
	padding:6px 0;
	border-bottom: 1px solid #efeff0;
	margin-left:5px;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.playicon{
	width:28px;
	height:28px;
}
.songs-item-content{
	width:86%;
}
.songs-item-title{
	font-size:17px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.songs-item-title-suffix{
	color:#888;
}
.songs-message{
	margin-top:3px;
	font-size:12px;
	color:#888;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}